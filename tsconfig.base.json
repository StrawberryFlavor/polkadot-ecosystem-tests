{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"lib": ["esnext", "dom", "dom.iterable"],
		"isolatedModules": true,
		"module": "nodenext",
		"moduleResolution": "nodenext",
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitAny": false,
		"target": "esnext",
		"skipLibCheck": true,
		"strict": true,
		"declaration": true,
		"resolveJsonModule": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": ".",
		"composite": true,
		"paths": {
			"@e2e-test/networks": ["packages/networks/src/index.ts"],
			"@e2e-test/networks/chains": ["packages/networks/src/chains/index.ts"],
			"@e2e-test/networks/*": ["packages/networks/src/*"],
			"@e2e-test/shared": ["packages/shared/src/index.ts"],
			"@e2e-test/shared/api": ["packages/shared/src/api/index.ts"],
			"@e2e-test/shared/xcm": ["packages/shared/src/xcm/index.ts"],
			"@e2e-test/shared/*": ["packages/shared/src/*"]
		}
	}
}
